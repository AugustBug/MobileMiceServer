<Window x:Class="MobileMice.WindowLaser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowLaser" Height="25" Width="25" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Cursor="None" AllowsTransparency="True">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    
    <Grid Width="25" Height="25">
        <Ellipse Width="16" Height="16" Fill="Red" Opacity="1">
            <Ellipse.BitmapEffect>
                <BlurBitmapEffect Radius="10" />
            </Ellipse.BitmapEffect>
        </Ellipse>    
    </Grid>
</Window>
